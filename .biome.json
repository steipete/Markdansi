{
	"$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
	"extends": ["biome:recommended"],
	"formatter": {
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"coverage/**",
			"**/coverage/**",
			"node_modules/**",
			"dist/**",
			"**/dist/**"
		]
	},
	"linter": {
		"rules": {
			"recommended": true
		}
	}
}
