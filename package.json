{
	"name": "markdansi",
	"version": "0.1.5",
	"description": "Tiny dependency-light markdown to ANSI converter.",
	"type": "module",
	"main": "dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./cli": "./dist/cli.js"
	},
	"bin": {
		"markdansi": "dist/cli.js"
	},
	"scripts": {
		"build": "pnpm lint && pnpm test && pnpm compile",
		"clean": "rm -rf dist",
		"lint": "rm -rf dist coverage && biome check .",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"types": "tsc -p tsconfig.json --emitDeclarationOnly",
		"compile": "tsc -p tsconfig.json",
		"prepare": "pnpm compile",
		"markdansi": "tsx src/cli.ts"
	},
	"keywords": [
		"markdown",
		"ansi",
		"terminal",
		"cli"
	],
	"engines": {
		"node": ">=22"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/steipete/Markdansi.git"
	},
	"bugs": {
		"url": "https://github.com/steipete/Markdansi/issues"
	},
	"homepage": "https://github.com/steipete/Markdansi#readme",
	"author": "Peter Steinberger",
	"license": "MIT",
	"sideEffects": false,
	"files": [
		"dist",
		"README.md",
		"docs/spec.md",
		"package.json",
		"tsconfig.json",
		".biome.json"
	],
	"types": "dist/index.d.ts",
	"dependencies": {
		"chalk": "^5.6.2",
		"mdast-util-from-markdown": "^2.0.2",
		"mdast-util-gfm": "^3.1.0",
		"micromark": "^4.0.2",
		"micromark-extension-gfm": "^3.0.0",
		"micromark-util-combine-extensions": "^2.0.1",
		"string-width": "^8.1.0",
		"strip-ansi": "^7.1.2",
		"supports-hyperlinks": "^4.3.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.5",
		"@types/mdast": "^4.0.4",
		"@types/node": "^24.10.1",
		"@vitest/coverage-v8": "^4.0.9",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^4.0.9"
	}
}
