{
	"name": "markdansi",
	"version": "0.1.0",
	"description": "Tiny dependency-light markdown to ANSI converter.",
	"type": "module",
	"main": "src/index.js",
	"exports": {
		".": {
			"import": "./src/index.js"
		},
		"./cli": "./src/cli.js"
	},
	"bin": {
		"markdansi": "./src/cli.js"
	},
	"scripts": {
		"build": "pnpm lint && pnpm test",
		"clean": "rm -rf dist",
		"lint": "biome check .",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage"
	},
	"keywords": [
		"markdown",
		"ansi",
		"terminal",
		"cli"
	],
	"engines": {
		"node": ">=22"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/steipete/Markdansi.git"
	},
	"bugs": {
		"url": "https://github.com/steipete/Markdansi/issues"
	},
	"homepage": "https://github.com/steipete/Markdansi#readme",
	"author": "",
	"license": "MIT",
	"sideEffects": false,
	"files": [
		"src",
		"README.md",
		"docs/spec.md",
		"package.json",
		"tsconfig.json",
		".biome.json"
	],
	"dependencies": {
		"chalk": "^5.6.2",
		"mdast-util-from-markdown": "^2.0.2",
		"mdast-util-gfm": "^3.1.0",
		"micromark": "^4.0.2",
		"micromark-extension-gfm": "^3.0.0",
		"micromark-util-combine-extensions": "^2.0.1",
		"string-width": "^8.1.0",
		"strip-ansi": "^7.1.2",
		"supports-hyperlinks": "^4.3.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.5",
		"@vitest/coverage-v8": "^4.0.9",
		"vitest": "^4.0.9"
	}
}
